<h1>All Articles</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
  </tr>
  <% @articles.each do |article| %>
  <tr>
    <td><%= article.title %></td>
    <td><%= article.description %></td>
    <td><%= link_to "Edit", edit_article_path(article) %></td>
    <td><%= link_to 'Selected Article', article_path(article) %></td>
    <td><%= link_to 'Delete Article', article_path(article), method: :delete, data: {confirm: 'Are you sure you want to delete?'} %></td>
  </tr>
  <% end %>
</table>

<%= link_to "Home", root_path %>
<%= link_to "Create new Article", new_article_path %>
